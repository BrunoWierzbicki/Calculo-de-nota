#include <stdio.h>

    int main ()
{
  float n1, n2, total, n3, total2, media ;

  printf ("CALCULO DE NOTA\n");

  printf ("Informe a média da sua instituição:\n") ;
      scanf ("%f", &media) ;

    printf ("Digite a nota N1:\n"); 
       scanf ("%f", &n1) ;

    printf ("Digite a nota N2:\n");
       scanf ("%f", &n2) ;

   total = (n1 * 0.4) + (n2 * 0.6);

    printf ("Sua nota é: %.2f\n", total);

    if (total >= media) { 
      printf ("APROVADO!") ; }

  else {
      printf ("Digite sua nota N3:\n") ;
        scanf ("%f", &n3) ; 

  total2 = (n1 * 0.4) + (n3 * 0.6) ;

  printf ("Sua nota é: %.2f\n", total2) ;

  if (total2 >= media) {
    printf ("APROVADO!\n") ; }

  else {
   printf ("REPROVADO!\n") ; }
    }

  return 0;
}